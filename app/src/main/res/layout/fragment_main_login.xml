<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F2F2F2"
    tools:context=".fragments.MainLoginFragment">
    <androidx.cardview.widget.CardView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.38"
        android:layout_width="0dp"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@drawable/shlyapa"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintWidth_percent="0.5"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
<!--            <com.google.android.material.tabs.TabLayout-->
<!--                app:tabRippleColor="@null"-->
<!--                app:tabTextColor="@color/black"-->
<!--                android:id="@+id/tablayout"-->
<!--                android:layout_marginLeft="40dp"-->
<!--                android:layout_marginRight="40dp"-->
<!--                app:tabIndicatorColor="#FA4A0C"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content">-->
<!--                <com.google.android.material.tabs.TabItem-->
<!--                    android:text="Login"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"/>-->
<!--                <com.google.android.material.tabs.TabItem-->
<!--                    android:text="Sign Up"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"/>-->
<!--            </com.google.android.material.tabs.TabLayout>-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
<!--    <androidx.viewpager.widget.ViewPager-->
<!--        android:id="@+id/viewPager"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="0dp"/>-->

      <LinearLayout
          app:layout_constraintTop_toBottomOf="@id/card"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:orientation="vertical"
          android:layout_width="0dp"
          android:layout_height="0dp">
          <LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1">
              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <TextView
                      android:id="@+id/t1"
                      android:text=""
                      android:layout_marginTop="20dp"
                      android:layout_marginLeft="30dp"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      android:textSize="@dimen/_20sdp"
                      android:textColor="@color/black"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
                  <TextView
                      android:id="@+id/t2"
                      android:textSize="@dimen/_13sdp"
                      android:layout_marginTop="10dp"
                      android:textColor="@color/black"
                      android:text="Одноразовый код отправлен на номер"
                      app:layout_constraintTop_toBottomOf="@id/t1"
                      app:layout_constraintStart_toStartOf="@id/t1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
                  <TextView
                      android:id="@+id/t3"
                      android:textSize="@dimen/_13sdp"
                      android:layout_marginTop="10dp"
                      android:textColor="@color/black"
                      android:text="(+998 99) 123-**-**"
                      app:layout_constraintTop_toBottomOf="@id/t2"
                      app:layout_constraintStart_toStartOf="@id/t2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
                  <TextView
                      android:id="@+id/info1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="30dp"
                      android:text="Смс код"
                      android:textSize="@dimen/_13sdp"
                      app:layout_constraintStart_toStartOf="@id/t3"
                      app:layout_constraintTop_toBottomOf="@+id/t3" />

                  <TextView
                      android:id="@+id/time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="30dp"
                      android:text="00:00"
                      android:textSize="@dimen/_13sdp"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintHorizontal_bias="0.882"
                      app:layout_constraintStart_toEndOf="@+id/info1"
                      app:layout_constraintTop_toBottomOf="@+id/t3" />

                  <EditText
                      android:id="@+id/code"
                      android:layout_width="0dp"
                      android:layout_height="50dp"
                      android:layout_marginTop="12dp"
                      android:background="@drawable/border"
                      android:hint="******"
                      android:paddingStart="15dp"
                      android:paddingLeft="15dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/info1"
                      app:layout_constraintWidth_percent="0.85" />

                  <ImageView
                      android:id="@+id/image"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="28dp"
                      android:src="@drawable/ic_refresh"
                      app:layout_constraintStart_toStartOf="@id/code"
                      app:layout_constraintTop_toBottomOf="@id/code" />

                  <TextView
                      android:clickable="true"
                      android:focusable="true"
                      android:id="@+id/recend"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="25dp"
                      android:text="Отправить код заново"
                      android:textColor="#20D472"
                      android:textSize="16sp"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintHorizontal_bias="0.05"
                      app:layout_constraintStart_toEndOf="@id/image"
                      app:layout_constraintTop_toBottomOf="@id/code" />
              </androidx.constraintlayout.widget.ConstraintLayout>
          </LinearLayout>
          <LinearLayout
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="4.5">
              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <androidx.cardview.widget.CardView
                      app:layout_constraintHeight_percent="0.7"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      android:id="@+id/login_btn"
                      android:clickable="true"
                      android:focusable="true"
                      android:foreground="?selectableItemBackgroundBorderless"
                      app:cardCornerRadius="24dp"
                      app:cardBackgroundColor="#FA4A0C"
                      android:layout_width="0dp"
                      app:layout_constraintWidth_percent="0.85"
                      android:layout_height="0dp">
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:gravity="center">
                          <TextView
                              android:textSize="@dimen/_17sdp"
                              android:text="Sign Up"
                              android:textColor="@color/white"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"/>
                      </LinearLayout>
                  </androidx.cardview.widget.CardView>
              </androidx.constraintlayout.widget.ConstraintLayout>
          </LinearLayout>
      </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>